@{
    ViewBag.Title = "CustomSearch";
    Layout = "~/Views/Shared/_header_footer.cshtml";
}

<div class="row" >
    <div class="col-md-3" id="search-ct">
        <div class="row" >
            <div class="col-md-offset-1">
                <label style="margin-top:50px; margin-left:50px; color:white; font-size:25px;" > Search here </label>                

               <div>
                    <label style="margin-top:50px; color:white; margin-left:40px; font-size:20px; margin-bottom:20px;" > By type and catagory</label>
                    <input type="text" name="type" id="src-type" class="form-control" placeholder="Type"/><br />
                    <input type="text" name="cat" id="src-cat" class="form-control" placeholder="Catagory"/><br />
                    <a><input type="submit" id="src-request" Value="Search"/></a>                                               
               </div>
               
                <label style="margin-top:50px; color:white; margin-left:40px; font-size:20px; margin-bottom:20px;" > By price range </label>
                <input type="text" name="type" id="src-min" class="form-control" placeholder="Min price"/>
                <label style="color:silver; margin-left:150px; margin-top:-30px;"> > </label>
                <input type="text" name="cat" id="src-max" class="form-control" placeholder="Max price"/>
                <a><input type="submit" id="src-request-price" Value="Search"/></a>                                
               
            </div>


        </div>
        
    </div>
    <div class="col-md-9">
            <ul id="list" style="margin-left:100px; margin-top:100px;"></ul>
    </div>
</div>