@model EAD_PROJECT_MVC.Models.Pet
@{   
    Layout = "~/Views/Shared/_header_footer.cshtml";
}

<div class="row">

    <div class="col-md-offset-2 col-md-8 col-md-offset-2">
        <label id="pet_name">@Model.Name</label>
        <p id="detail-para"> @Model.Desciption</p>
        <p class="product-price"><span class="price">@Model.price</span></p>
    </div>

</div>

<div class="row">

    <div class="col-md-offset-3 col-md-6">
        <img src="~/@Model.iconImage" alt="bully" id="bully" />
    </div>

</div>

<div class="row">

    <div class="col-md-offset-3 col-md-6">        
        <form id="buy-form" method="post" action="~/Order/OrderInfo/@Model.PID">
            <label id="pet_name1"> Buy it Online </label>
            
            <label id="mobile-label"> Mobile no: </label>
            <input type="text" name="Mobile" id="mobile" class="form-control" placeholder="Mobile"/> 
                       
            <label id="visa-label"> Visa credit card no: </label>
            <input type="text" name="VisaCard" id="visa" class="form-control" placeholder="Visa Card"/> 

            <label id="address-label"> Address: </label>
            <input type="text" name="Address" id="address" class="form-control" placeholder="Address"/>            

            <div>
                <label id="qty">Qty</label>
            </div>

           <div >
               
                <select class="selectpicker" id="dropdownMenu1" name="picker">                    
                        <option id="o1" value="1">1</option>
                        <option id="o2" value="2">2</option>
                        <option id="o3" value="3">3</option>
                </select>
                              
            </div>            
            
            
            @if (Session["name"] == null)
            {
                Session["url"] = "/details/" + @Model.PID;
                <a class="btn" id="login-btn" href="#" onclick="location.href='@Url.Content("~/Order/login")'">Order</a>                                
            }
            else
            { 
                <input type="submit" id="order" Value="Order"/>    
            }

        </form>
    </div>
</div>
       